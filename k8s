apiVersion: apps/v1
kind: Deployment
metadata:
  name: calculator
  namespace: ravi-ns1
spec:
  replicas: 2
  selector:
    matchLabels:
      app: calculator
  template:
    metadata:
      labels:
        app: calculator
    spec:
      containers:
      - name: calculator
        image: <your-docker-image>:latest
        ports:
        - containerPort: 3000
